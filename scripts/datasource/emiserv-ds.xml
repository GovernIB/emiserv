<datasource jndi-name="java:jboss/datasources/emiservDS" pool-name="emiservDS" enabled="true" use-java-context="true">
    <connection-url>${env.DATABASE_URL}</connection-url>
    <driver>${env.DATABASE_DRIVER}</driver>
    <security>
        <user-name>${env.DATABASE_USER}</user-name>
        <password>${env.DATABASE_PASSWD}</password>
    </security>
</datasource>
