<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>EMISERV-API-EXTERNA</display-name>
    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>Govern de les Illes Balears</realm-name>
    </login-config>
    <security-role>
        <description>Administradors de l'aplicaci√≥</description>
        <role-name>EMS_ADMIN</role-name>
    </security-role>
    <security-role>
        <description>Usuaris per consulta rest</description>
        <role-name>EMS_REPORT</role-name>
    </security-role>
    <security-constraint>
        <display-name>Unauthenticated areas</display-name>
        <web-resource-collection>
            <web-resource-name>Obert</web-resource-name>
            <url-pattern>/rest</url-pattern>
            <url-pattern>/swagger-resources/*</url-pattern>
            <url-pattern>/swagger-ui/*</url-pattern>
            <url-pattern>/swagger-config/*</url-pattern>
            <url-pattern>/api-docs</url-pattern>
            <url-pattern>/api-docs/*</url-pattern>
            <url-pattern>/webjars/*</url-pattern>
            <url-pattern>/opendata</url-pattern>
            <url-pattern>/v2/opendata</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <display-name>All areas</display-name>
        <web-resource-collection>
            <web-resource-name>All areas</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>